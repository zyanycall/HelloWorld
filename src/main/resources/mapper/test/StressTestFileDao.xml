    <delete id="deleteBatch">
        delete from test_stress_case_file where file_id in
        <foreach item="fileIds" collection="array" open="(" separator="," close=")">
            #{fileIds}
        </foreach>
    </delete>

    <select id="querycsvdata" resultType="io.renren.modules.test.entity.StressTestFileEntity">
        SELECT t1.*,t2.slave_name FROM test_stress_case_file t1
			LEFT JOIN test_stress_slave t2 ON t1.`slave_id` = t2.`slave_id`
			WHERE t1.iscsvdata = #{iscsvdata}
			ORDER BY t1.file_id desc
    </select>
    
    <select id="querycsvdataTotal" resultType="int">
        select count(1) from test_stress_case_file where iscsvdata = 1 
        	and membership_fileid = 0
    </select>
    
    <select id="queryslaveFile" resultType="io.renren.modules.test.entity.StressTestFileEntity">
		SELECT * FROM test_stress_case_file WHERE membership_fileid in 
	        <foreach item="membershipfileid" collection="array" open="(" separator="," close=")">
	            #{membershipfileid}
	        </foreach>
    </select>

</mapper>