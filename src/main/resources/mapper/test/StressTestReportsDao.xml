    <delete id="deleteBatch">
        delete from test_stress_case_reports where report_id in
        <foreach item="reportIds" collection="array" open="(" separator="," close=")">
            #{reportIds}
        </foreach>
    </delete>

    <delete id="delete">
        delete from test_stress_case_reports where report_id = #{reportId}
    </delete>

</mapper>